@model IEnumerable<PaymentlistingDTO>

@{
    ViewBag.Title = "AllMemberList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet">

<div class="container">
    <div style="margin-top: 10px"></div>


    <div class="logo col-sm-12 text-center col-md-12 ">
        <img alt="" src="~/Images/dotnetsai.png" />
    </div>

    <div class="clearfix"></div>

    <fieldset>

        <legend class="legend">All Member List</legend>
        <div style="margin-top: 5px"></div>
        <div class="test" >
            <div>
                <div class="panel">

                    <div class="panel-body">

                        @(Html.Grid(Model).Build(columns =>
                    {

                        columns.Add(c => c.MemberReg).Titled("MemberNo").Filterable(true);
                        columns.Add(c => c.Name).Titled("Name").Filterable(true);
                        columns.Add(c => c.JoiningDate).Titled("JoiningDate").Filterable(true).Formatted("{0:d}");
                        columns.Add(c => c.RenwalDate).Titled("RenewalDate").Filterable(true).Formatted("{0:d}");
                        columns.Add(c => c.Contactno).Titled("Contactno").Filterable(true);
                        columns.Add(c => c.PlanName).Titled("PlanName").Filterable(true);
                        columns.Add(c => c.SchemeName).Titled("SchemeName").Filterable(true);
                        columns.Add(c => c.PaymentAmount).Titled("Amount").Filterable(true);

                    }).Empty("No data found")
                .Sortable()
                //.Pageable()
                )

                    </div>
                </div>
            </div>
        </div>
    </fieldset>

</div>
@section Scripts {

    <script src="~/js/mvc-grid/mvc-grid.js"></script>
    <script>
        document.querySelectorAll(".mvc-grid").forEach(element => new MvcGrid(element));
    </script>
}